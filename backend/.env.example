# HealthConnect Backend Environment Variables
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control

# Server Configuration
NODE_ENV=development
PORT=4000
FRONTEND_URL=http://localhost:5173
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:4000

# Database Configuration (REQUIRED)
MONGODB_URI=mongodb://localhost:27017/healthconnect

# JWT Authentication (REQUIRED)
ACCESS_TOKEN_SECRET=your-super-secret-access-token-key-change-this-in-production
REFRESH_TOKEN_SECRET=your-super-secret-refresh-token-key-change-this-in-production
ACCESS_TOKEN_EXPIRE=15m
REFRESH_TOKEN_EXPIRE=7d

# Stripe Payment Configuration (REQUIRED for payments)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here

# Cloudinary Configuration (REQUIRED for file uploads)
cloud_name=your_cloudinary_cloud_name
api_key=your_cloudinary_api_key
api_secret=your_cloudinary_api_secret

# Email Configuration (OPTIONAL)
GMAIL_USER=your-email@gmail.com
GMAIL_APP_PASSWORD=your-gmail-app-password
HEALTHCONNECT_GMAIL=your-email@gmail.com

# SMS Configuration (OPTIONAL)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Video Call Configuration (OPTIONAL)
JITSI_DOMAIN=meet.jit.si
VIDEO_SECRET=your-video-secret-key

# Logging Configuration (OPTIONAL)
LOG_LEVEL=info
